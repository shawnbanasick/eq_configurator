{
  "name": "eq-configurator",
  "description": "Configurator for online Q sorting",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "Shawn Banasick",
    "email": "ken.q.tools@gmail.com",
    "url": "https://github.com/shawnbanasick/eq_configurator"
  },
  "build": {
    "afterSign": "scripts/notarize.js",
    "appId": "com.banasick.configurator",
    "productName": "EQ-Configurator",
    "copyright": "Copyright Â© 2021 ${author}",
    "linux": {
      "category": "Science",
      "description": "Open source Q methodology app",
      "synopsis": "Use EQ-Configurator to setup an Easy HTMLQ project for online Q sorting",
      "icon": "../build/icons/icon.icns",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "../build/icons/icon3.png",
      "target": [
        "portable",
        "nsis"
      ]
    },
    "dmg": {
      "sign": false
    },
    "mac": {
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "icon": "../build/icons/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "files": [
      "build/icon.*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@risingstack/react-easy-state": "^6.3.0",
    "dotenv": "^8.2.0",
    "electron-context-menu": "^2.4.0",
    "electron-is-dev": "^1.2.0",
    "electron-settings": "^3.2.0",
    "i18next": "^19.8.4",
    "i18next-chained-backend": "^2.0.0",
    "i18next-localstorage-backend": "^3.0.0",
    "i18next-node-fs-backend": "^2.1.3",
    "node-static": "^0.7.11",
    "react": "^17.0.1",
    "react-beautiful-dnd": "^13.0.0",
    "react-dom": "^17.0.1",
    "react-i18next": "^11.8.5",
    "react-scripts": "^4.0.1",
    "react-toastify": "^6.2.0",
    "react-toggle": "^4.1.1",
    "rfdc": "^1.2.0",
    "styled-components": "^5.2.1"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"BROWSER=none npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "npm run build",
    "electron-pack": "build -mw",
    "dist:macOS": "electron-builder --mac",
    "dist:windows": "electron-builder --windows --x64 --ia32",
    "dist:linux": "electron-builder --linux"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@rescripts/cli": "^0.0.15",
    "@rescripts/rescript-env": "^0.0.12",
    "babel-eslint": "10.1.0",
    "concurrently": "^5.3.0",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "electron-notarize": "^1.0.0",
    "eslint": "^7.17.0",
    "eslint-config-babel": "^9.0.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-standard": "^4.1.0",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "wait-on": "^5.2.1"
  }
}
